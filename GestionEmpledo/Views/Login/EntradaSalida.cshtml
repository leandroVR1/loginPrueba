@model GestionEmpledo.Models.RegistrosEntrada_Salida

<h2>Registro de Entrada y Salida</h2>

@using (Html.BeginForm("GuardarEntradaSalida", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.FechaEntrada)
        @Html.TextBoxFor(m => m.FechaEntrada, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
        @Html.ValidationMessageFor(m => m.FechaEntrada, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaSalida)
        @Html.TextBoxFor(m => m.FechaSalida, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
        @Html.ValidationMessageFor(m => m.FechaSalida, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Registro</button>
}
