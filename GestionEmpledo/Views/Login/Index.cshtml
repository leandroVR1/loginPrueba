@model GestionEmpledo.Models.Empleado

<h2>Iniciar sesión</h2>

<form asp-controller="Login" asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Correo">Correo electrónico</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contraseña">Contraseña</label>
        <input asp-for="Contraseña" class="form-control" type="password" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
</form>
