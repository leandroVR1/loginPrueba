@model GestionEmpledo.ViewModels.EmpleadoCreateViewModel



@{
    ViewData["Title"] = "Create";
}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="agregarEmpleadoModalLabel">Agregar Empleado</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Empleado.Nombre"></label>
                    <input asp-for="Empleado.Nombre" class="form-control" />
                    <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empleado.Apellido"></label>
                    <input asp-for="Empleado.Apellido" class="form-control" />
                    <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empleado.Telefono"></label>
                    <input asp-for="Empleado.Telefono" class="form-control" />
                    <span asp-validation-for="Empleado.Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empleado.Correo"></label>
                    <input asp-for="Empleado.Correo" class="form-control" />
                    <span asp-validation-for="Empleado.Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empleado.Contraseña"></label>
                    <input asp-for="Empleado.Contraseña" class="form-control" />
                    <span asp-validation-for="Empleado.Contraseña" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empleado.IdRol">Rol</label>
                    <select asp-for="Empleado.IdRol" asp-items="Model.Roles" class="form-control"></select>
                    <span asp-validation-for="Empleado.IdRol" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>